<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>ViewPage</title>
    <link href="../uploads/style.css" rel="stylesheet">
</head>

<body>
  <%- include("./partials/nav") %>


    <div class="container-main">
      <div class="container mt-5 viewpage" style="min-height: 74.5vh;">


        <video controls class="viewPageVideo">
          <source src="/<%= movie.Video %>" class="viewPageVideo img-fluid mt-4">
          </source>
        </video>

        <h2 class="mb-1 pt-3 fw-bold viewPagehighlight">
          <%= movie.Title %>
        </h2>

        <img src="<%= movie.CreatedBy.ProfileImageUrl %>" height="40px" class="default-img">

        <span class="ps-2 viewPageBlogerName  viewPagehighlight">
          <%= movie.CreatedBy.FullName %><i class="fa-solid fa-circle-check viewPagehighlight"></i>
        </span>

        <pre class="mt-3 viewPageDetails text-white "> <%= movie.Body %> </pre>


      </div>

      <div class="container mt-3">
        <h2> <span class="viewPagehighlight">Comment (<%= comments.length %>) </span>
        </h2>
        <% if(locals.user){ %>
          <form action="/comment/<%= movie._id %>" method="post">

            <div class="mb-3">

              <input type="text" class="form-control viewInputField" id="content" name="content"
                placeholder="Enter Your Comment" aria-describedby="emailHelp">
            </div>

            <button type="submit" class="btn btn-warning ">Submit</button>
          </form>


          <% } %>


            <div class="mt-3">
              <% comments.forEach((comment)=> { %>
                <div>
                  <img src="<%= comment.CreatedBy.ProfileImageUrl %>" width="40px" class="default-img">
                  <span class="fw-bold text-white ">
                    <%= comment.CreatedBy.FullName %><i class="fa-solid fa-circle-check"></i>
                  </span>
                  <pre class="mt-2 fw-bold text-white"><%= comment.Content %></pre>
                </div>
                <% }) %>
            </div>

      </div>
    </div>






    <%- include("./partials/footer") %>
      <%- include("./partials/script") %>
</body>

</html>